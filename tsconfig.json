{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~": ["src"],
      "~/*": ["src/*"],
      "~tests/*": ["tests/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
