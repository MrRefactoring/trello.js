{
  "extends": "tslint:recommended",
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "no-namespace": false,
    "curly": true,
    "class-name": true,
    "trailing-comma": false,
    "object-literal-sort-keys": false,
    "object-literal-key-quotes": false,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "src/**/*.d.ts"
    ]
  },
  "defaultSeverity": "warning"
}
